		<dependency>
			<groupId>bingo.sso</groupId>
			<artifactId>bingo-sso-plugin-ssoconnector</artifactId>
			<version>${bingo-sso-plugin-ssoconnector.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		 -->	
	</dependencies>
</project>
